<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/back_ground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="18dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/big_logo_total"/>

                    <RelativeLayout
                        android:id="@+id/RelativeLayout01"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/background_drawable" >
                        <TextView
                            android:id="@+id/toastText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingLeft="10dp"
                            android:drawableLeft="@drawable/baseline_email_24"
                            android:paddingRight="3dp"
                            android:drawablePadding="20dp"
                            android:paddingTop="2dp"
                            android:text="Sign Up With Gmail"
                            android:textColor="#FFF"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:background="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:layout_weight="1"
                            android:textStyle="normal"
                            android:textColor="#000"
                            android:gravity="center"
                            android:fontFamily="@font/regular"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="First Name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_first_name"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Last Name"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_last_name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:hint="Gender"
                                android:focusable="false"
                                android:textColorHint="#000"
                                android:gravity="center"
                                android:fontFamily="@font/regular"
                                android:background="@drawable/back_ground"/>
                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <!--adding a radio button -->
                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:layout_marginLeft="12dp"
                                    android:text="Male"
                                    android:layout_weight="1"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:text="Female"
                                    android:textSize="20sp" />

                            </RadioGroup>

                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Date of Birth"
                            android:id="@+id/edt_date"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:fontFamily="@font/regular"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="12dp"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Mother Tongue"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_tongue"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the email"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_email"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the Mobile Number"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_number"
                            android:inputType="number"
                            android:textColorHint="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text=""
                            android:id="@+id/txt_tearms_condition"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:gravity="center"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Submit"
                            android:id="@+id/but_submit"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="#FD6801"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/back_ground"
                android:layout_marginTop="18dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:id="@+id/txt_signIn"
                        android:textStyle="bold"
                        android:text="Have an Account?"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>