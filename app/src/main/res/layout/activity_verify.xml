                            android:background="@drawable/otp_box"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/otp_digit_4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/otp_box"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="20sp" />
                    </LinearLayout>-->


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter otp"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:paddingRight="14dp"
                        android:id="@+id/edt_otp"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="20dp"
                        android:layout_marginTop="14dp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="PassWord"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:id="@+id/password"
                        android:paddingRight="14dp"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Confirm Password"
                        android:textSize="20dp"
                        android:layout_marginTop="14dp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Confirm PassWord"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:id="@+id/edt_reenter_password"
                        android:paddingRight="14dp"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000" />


                   <!-- <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ForgotPassword?"
                        android:textStyle="bold"
                        android:textColor="#4e148c"
                        android:textSize="20dp"
                        android:gravity="right"
                        android:layout_marginTop="14dp" />-->
                </LinearLayout>
            </LinearLayout>

            <!-- Sign Up Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_form_signup">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="First Name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_first_name"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LastName"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Last Name"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_last_name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:hint="Gender"
                                android:focusable="false"
                                android:textColorHint="#000"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@drawable/back_ground"/>
                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <!--adding a radio button -->
                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:layout_marginLeft="12dp"
                                    android:text="Male"
                                    android:layout_weight="1"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:text="Female"
                                    android:textSize="20sp" />

                            </RadioGroup>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Date of Birth"
                            android:id="@+id/edt_date"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:fontFamily="@font/regular"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mother Tongue"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Mother Tongue"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_tongue"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the email"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_email"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the Mobile Number"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_number"
                            android:inputType="number"
                            android:textColorHint="#000"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Register"
                            android:id="@+id/but_register"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FD6801"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:weightSum="3"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:background="#000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OR"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:textColor="#4e148c"
                                android:gravity="center"
                                android:textSize="18dp"/>
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="12dp"
                                android:background="#000"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/layout_already_sign"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Already have an account?"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FD6801"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:text="SignIn"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Here"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>




            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Verify account"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:id="@+id/but_verify"
        android:visibility="visible"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FD6801"/>

