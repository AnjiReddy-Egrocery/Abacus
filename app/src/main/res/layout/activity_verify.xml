                            android:background="@drawable/otp_box"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/otp_digit_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
