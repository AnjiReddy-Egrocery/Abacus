<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_background"
    tools:context=".Activity.ViewResultDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:id="@+id/btn_back_to_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@drawable/circle_image">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Worksheet Subscription"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back_ground_white"
            android:layout_margin="14dp">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                        <TextView
                            android:id="@+id/tv_subscription_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unlock full access to our interactive worksheets designed for all learning levels.
Practice with targeted exercises to strengthen key concepts and skills.
Get assessment sets to test your understanding and track your progress.
Subscribe now to experience a complete and guided learning journey!"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginBottom="24dp"
                            android:elevation="2dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Do you want to subscribe?"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_yes"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:text="Yes"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#388E3C"
                            android:layout_marginEnd="16dp" />

                        <Button
                            android:id="@+id/btn_no"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:text="No"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#D32F2F" />









                    </LinearLayout>
                </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>



