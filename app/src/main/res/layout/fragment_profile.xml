<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/signin_background">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"

                android:id="@+id/layout_form_otp_verification">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_password"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="25dp"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="#FFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/baseline_lock_24"
                                android:textColor="#000"
                                android:text="Change Password"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_settings"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="25dp"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="#FFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_Settings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="#000"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/baseline_settings_24"
                                android:text="Settings"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_conditions"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="25dp"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="#FFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="#000"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/baseline_sticky_note_2_24"
                                android:text="Terms and Conditions"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:id="@+id/layout_logout"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="25dp"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="#FFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="#000"
                                android:text="LogOut"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/baseline_logout_24"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>




            </LinearLayout>

            <!-- Sign Up Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_form_signup">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="First Name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_first_name"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LastName"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Last Name"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_last_name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/back_ground"
                            android:textColorHint="#000"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:hint="Gender"
                                android:focusable="false"
                                android:textColorHint="#000"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@drawable/back_ground"/>
                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <!--adding a radio button -->
                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:layout_marginLeft="12dp"
                                    android:text="Male"
                                    android:layout_weight="1"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:text="Female"
                                    android:textSize="20sp" />

                            </RadioGroup>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Date of Birth"
                            android:id="@+id/edt_date"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:fontFamily="@font/regular"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mother Tongue"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Mother Tongue"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_tongue"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the email"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_email"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the Mobile Number"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_number"
                            android:inputType="number"
                            android:textColorHint="#000"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Register"
                            android:id="@+id/but_register"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FD6801"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:weightSum="3"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:background="#000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OR"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:textColor="#4e148c"
                                android:gravity="center"
                                android:textSize="18dp"/>
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="12dp"
                                android:background="#000"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/layout_already_sign"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Already have an account?"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FD6801"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:text="SignIn"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Here"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>




            </LinearLayout>


        </LinearLayout>

    </LinearLayout>





</LinearLayout>