<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_level_item"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <!-- Course Image -->
            <ImageView
                android:id="@+id/imgCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abacus_logo"
                android:layout_marginEnd="6dp"
                android:padding="5dp"/>

            <!-- 2-Row Level Boxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCourseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Abacus Junior (6 Levels)"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000000" />

                <!-- Age Group -->
                <TextView
                    android:id="@+id/tvAgeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Age group : (5â€“8 years)"
                   android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnPurchase1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:backgroundTint="#FF5722"
                    android:text="Subscribe Now"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
