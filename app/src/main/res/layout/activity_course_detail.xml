<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".Activity.AllSchedulesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_background"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:layout_gravity="center_horizontal"
                android:id="@+id/layout_coursedetail_back">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:orientation="vertical"
                        android:background="@drawable/circle_image">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/baseline_arrow_back_ios_new_24"/>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Course Details"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:layout_marginLeft="-40dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_marginRight="-90dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/layout_cart">

                    <ImageView
                        android:id="@+id/ivCart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cart"
                        android:layout_marginRight="20dp"

                        android:contentDescription="Cart" />

                    <TextView
                        android:id="@+id/tvCartCount"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignTop="@id/ivCart"
                        android:layout_alignEnd="@id/ivCart"
                        android:background="@drawable/circle_red"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="#FFF"
                        android:gravity="center"
                         />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Duration :"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:id="@+id/recycler_course_duration"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Levels :"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:id="@+id/recycler_course_levels"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#5E35B1"
                    android:layout_margin="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total for Selected Levels"
                        android:textColor="#fff"
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0/-"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 levels selected"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add To Cart"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="#ff6b35"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Cart"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:backgroundTint="#3f51b5"/>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</LinearLayout>