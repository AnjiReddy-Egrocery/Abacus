<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/margin_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/back_ground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_middle"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top"
                    android:scaleType="fitCenter"
                    android:src="@drawable/big_logo_total"/>

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/width"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_drawable" >

                    <TextView
                        android:id="@+id/toastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:paddingRight="3dp"
                        android:drawablePadding="20dp"
                        android:paddingTop="2dp"
                        android:text="Log in with Gmail"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        android:fontFamily="@font/regular"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:textSize="16dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Parent Email"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:id="@+id/edt_parent_email"
                        android:fontFamily="@font/regular"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Password"
                        android:id="@+id/edt_password"
                        android:background="@drawable/back_ground"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="12dp"
                        android:fontFamily="@font/regular"
                        android:inputType="textPassword"
                        android:textColorHint="#000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Forgot Password?"
                        android:textColor="#000"
                        android:fontFamily="@font/regular"
                        android:id="@+id/txt_forgot_password"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Login"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:textColor="#FFF"
                        android:id="@+id/but_login"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#FD6801"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/back_ground"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:id="@+id/txt_sigUp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Don't have an account?"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>