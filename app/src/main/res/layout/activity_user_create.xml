<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/signin_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_header_signin"
            android:visibility="visible"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@drawable/circle_image">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign In"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_header_signup"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@drawable/circle_image">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Tabs Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <!-- Sign In Tab -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Sign In Text -->
                     <TextView
                        android:id="@+id/txt_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#4e148c" />

                    <!-- Sign In Line -->
                    <View
                        android:id="@+id/line_signin"
                        android:layout_width="100dp"
                        android:layout_height="5dp"
                        android:background="#4e148c"
                        android:layout_marginTop="12dp"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- Sign Up Tab -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Sign Up Text -->
                    <TextView
                        android:id="@+id/txt_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#A3A6A8" />

                    <!-- Sign Up Line -->
                    <View
                        android:id="@+id/line_signup"
                        android:layout_width="100dp"
                        android:layout_height="5dp"
                        android:background="#4e148c"
                        android:layout_marginTop="12dp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <!-- Full Underline -->
            <View
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A3A6A8"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="-18.5dp"
                android:layout_gravity="start" />

            <!-- Sign In Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_form_signin">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Email"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:paddingRight="14dp"
                        android:id="@+id/edt_parent_email"
                        android:drawableRight="@drawable/baseline_email_24"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="20dp"
                        android:layout_marginTop="14dp"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/laypass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp">

                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/back_ground"
                            android:drawablePadding="10dp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:textColor="#000"
                            android:textColorHint="#000"/>

                        <ImageView
                            android:id="@+id/show_pass_btn"
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:onClick="ShowHidePass"
                            android:padding="5dp"
                            android:src="@drawable/visiablity" />
                    </RelativeLayout>

                    <!--<EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="PassWord"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:id="@+id/edt_password"
                        android:paddingRight="14dp"
                        android:background="@drawable/back_ground"
                        android:textColorHint="#000" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ForgotPassword?"
                        android:textStyle="bold"
                        android:textColor="#4e148c"
                        android:textSize="20dp"
                        android:gravity="right"
                        android:id="@+id/txt_forgot_password"
                        android:layout_marginTop="14dp" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Login"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:id="@+id/but_login"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#FD6801"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:gravity="center"
                        android:id="@+id/layout_or_SignIn"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="120dp"
                            android:layout_height="3dp"
                            android:background="#000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:layout_marginLeft="12dp"
                            android:textStyle="bold"
                            android:textColor="#4e148c"
                            android:gravity="center"
                            android:textSize="18dp"/>
                        <View
                            android:layout_width="120dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="12dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/layout_text_signIn"
                        android:layout_marginTop="16dp"
                        android:weightSum="3">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Don't have an account?"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FD6801"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginLeft="12dp"
                            android:textStyle="bold"
                            android:text="SignUp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Here"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <!-- Sign Up Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/layout_form_signup">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="First Name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_first_name"
                            android:background="@drawable/back_ground"
                            android:paddingRight="13dp"
                            android:drawableRight="@drawable/baseline_perm_identity_24"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Last Name"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_last_name"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/back_ground"
                            android:drawableRight="@drawable/baseline_perm_identity_24"
                            android:paddingRight="13dp"
                            android:textColorHint="#000"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:hint="Gender"
                                android:focusable="false"
                                android:textColorHint="#000"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:background="@drawable/back_ground"/>
                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <!--adding a radio button -->
                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:layout_marginLeft="12dp"
                                    android:text="Male"
                                    android:layout_weight="1"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:fontFamily="@font/regular"
                                    android:text="Female"
                                    android:textSize="20sp" />

                            </RadioGroup>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth"
                            android:textSize="20dp"
                            android:layout_marginTop="14dp"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Date of Birth"
                            android:id="@+id/edt_date"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:fontFamily="@font/regular"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/back_ground"
                            android:paddingRight="13dp"
                            android:drawableRight="@drawable/baseline_calendar_month_24"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mother Tongue"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Mother Tongue"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_tongue"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the email"
                            android:background="@drawable/back_ground"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:drawableRight="@drawable/baseline_email_24"
                            android:paddingEnd="15dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_email"
                            android:inputType="textAutoComplete"
                            android:textColorHint="#000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginTop="14dp"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Enter the Mobile Number"
                            android:background="@drawable/back_ground"
                            android:drawableRight="@drawable/baseline_phone_iphone_24"
                            android:paddingEnd="13dp"
                            android:layout_marginTop="6dp"
                            android:paddingLeft="12dp"
                            android:fontFamily="@font/regular"
                            android:id="@+id/edt_number"
                            android:inputType="number"
                            android:textColorHint="#000"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Register"
                            android:id="@+id/but_register"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:layout_marginTop="25dp"
                            android:backgroundTint="#FD6801"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:weightSum="3"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:background="#000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OR"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:textColor="#4e148c"
                                android:gravity="center"
                                android:textSize="18dp"/>
                            <View
                                android:layout_width="120dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="12dp"
                                android:background="#000"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/layout_already_sign"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Already have an account?"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FD6801"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:layout_marginLeft="12dp"
                                android:textStyle="bold"
                                android:text="SignIn"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Here"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>




            </LinearLayout>


        </LinearLayout>

</LinearLayout>

</LinearLayout>