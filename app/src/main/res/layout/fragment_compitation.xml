<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Class"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Addition Basics : "
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="10:00 AM To 11:00 AM"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_background"
            android:text="Join Class"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="230dp"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Upcoming Classes"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Subtraction Tricks :"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="10th April 2024"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00AM To 11:00AM"
                android:layout_gravity="end"
                android:layout_marginLeft="170dp"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="normal" />


        </LinearLayout>

         <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@drawable/background_orange">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Events"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Competition :"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Abacus Speed Test"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="10th April 2024"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Details :"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Join us for a competative test to showcase youe skills!"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal"/>


    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_background"
            android:text="Set Reminder"
            android:layout_marginTop="15dp"
            android:layout_marginRight="170dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            />



</LinearLayout>

    </LinearLayout>
</LinearLayout>



