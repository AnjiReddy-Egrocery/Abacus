<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".User.HomeActivity">

    <!-- Main content view -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/arrow_bg"
                android:layout_gravity="center"
                android:id="@+id/image_profile"/>


            <!-- <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:src="@drawable/headerprofile"
                 android:id="@+id/image_profile_1"/>-->

            <!-- <ImageView
                 android:id="@+id/img_camera"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                android:layout_gravity="center"
                 android:layout_marginEnd="8dp"
                 android:src="@drawable/ic_camera"
                 android:contentDescription="Change Profile Image"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:padding="8dp" />-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="First Name"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_first_name"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Middle Name"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_middle_name"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_last_name"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="date of birth"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_date_birth"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Gender"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_gender"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mother Tongue"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_mother_tongue"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Father Name"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_father_name"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mother Name"
                android:fontFamily="@font/regular"
                android:id="@+id/edt_Mother_name"
                android:inputType="textAutoComplete"
                android:paddingLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_ground"
                android:textColorHint="#000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Profile"
                android:id="@+id/but_update_profile"
                android:textSize="16dp"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FD6801"/>


        </LinearLayout>

    </ScrollView>







</LinearLayout>
