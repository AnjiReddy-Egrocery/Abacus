<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".User.HomeActivity">

    <!-- Main content view -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- AppBar with Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4e148c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Custom Layout Inside Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
               >
                <LinearLayout
                    android:id="@+id/btn_back_to_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/circle_image">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:src="@drawable/baseline_arrow_back_ios_new_24"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update Profile"
                    android:layout_marginStart="8dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="75dp">


       <!-- <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/headerprofile"
            android:id="@+id/image_profile_1"/>-->

       <!-- <ImageView
            android:id="@+id/img_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="Change Profile Image"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="First Name"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_first_name"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Middle Name"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_middle_name"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Last Name"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_last_name"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="date of birth"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_date_birth"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Gender"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_gender"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mother Tongue"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_mother_tongue"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Father Name"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_father_name"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mother Name"
            android:fontFamily="@font/regular"
            android:id="@+id/edt_Mother_name"
            android:inputType="textAutoComplete"
            android:paddingLeft="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_ground"
            android:textColorHint="#000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Update Profile"
            android:id="@+id/but_update_profile"
            android:textSize="16dp"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FD6801"/>


    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>