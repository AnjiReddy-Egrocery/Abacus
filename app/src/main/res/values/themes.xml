<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AbacusTrainer" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item> <!-- Use Black or Transparent -->
    </style>




    <style name="Theme.AbacusTrainer" parent="Base.Theme.AbacusTrainer"
        >
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="floatingAdd2" parent="Widget.Design.FloatingActionButton">
        <item name = "android:foreground"> @drawable/notes</item>
        <item name="backgroundTint">#FD6801</item>

    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <!-- Adjust the icon-text gap using the padding attribute -->
        <item name="android:paddingTop">8dp</item> <!-- Top padding -->
        <item name="android:paddingBottom">8dp</item> <!-- Bottom padding -->
        <!-- Other style attributes as needed -->
    </style>

    <style name="BottomNavStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="BottomNavTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <!-- Add any other styling attributes here -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item> <!-- Set your desired text color -->
        <item name="android:fontFamily">@font/regular</item> <!-- Set your desired font family -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="NavigationMenuTextStyle">
        <item name="android:textSize">20dp</item> <!-- Adjust text size -->
        <item name="android:textStyle">bold</item> <!-- Set text style -->
        <item name="android:textColor">#000</item> <!-- Text color -->
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16dp</item> <!-- Set desired text size -->
        <item name="android:textColor">#000000</item> <!-- Optional: Set text color -->
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>
    <style name="WeekendHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#FF6600</item> <!-- Orange Background -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Weekdays (Mon - Fri) -->
    <style name="WeekdayHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#800080</item> <!-- Purple Background -->
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>