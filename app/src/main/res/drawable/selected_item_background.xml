<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/holo_orange_light" /> <!-- Orange color -->
            <corners android:radius="50dp" /> <!-- Smaller circle size (adjust this as needed) -->
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/transparent" /> <!-- Transparent for unselected -->
        </shape>
    </item>
</selector>