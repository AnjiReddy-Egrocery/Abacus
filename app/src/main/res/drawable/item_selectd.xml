<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#852FDD" /> <!-- Highlight color -->
            <corners android:radius="10dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- No background -->
        </shape>
    </item>
</selector>
